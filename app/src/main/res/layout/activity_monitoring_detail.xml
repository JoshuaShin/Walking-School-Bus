<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thewalkingschoolbus.thewalkingschoolbus.MonitoringDetailActivity"
    tools:layout_editor_absoluteY="25dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nametextViewid"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            android:text="name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/nametextViewid"
            android:layout_alignBottom="@+id/nametextViewid"
            android:layout_toEndOf="@+id/stopMonitID"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nametextViewid"
            android:layout_marginTop="14dp"
            android:text="email"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="14dp"
            android:text="cellphone"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/stopMonitID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="26dp"
            android:text="stop monitoring" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignStart="@+id/textView21"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/listview5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stopMonitID"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="402dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_above="@+id/stopMonitID"
            android:layout_alignStart="@+id/textView7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/editChildbtnid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView22"
            android:layout_alignTop="@+id/stopMonitID"
            android:text="Edit" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignTop="@+id/textView8"
            android:textSize="24sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
