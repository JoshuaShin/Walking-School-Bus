<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/fullname"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="@string/textview_name"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/enter_fullname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/fullname"
        android:hint="@string/textview_enter_name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="19dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/textview_email"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/enter_email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/useremail"
        android:inputType="textEmailAddress"
        android:hint="@string/textview_enter_email"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enter_email"
        android:layout_marginTop="11dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/textview_phone_number"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/enter_phone"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/phone_number"
        android:inputType="phone"
        android:hint="@string/textview_enter_phone_number"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enter_phone"
        android:layout_marginTop="11dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/textview_address"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/enter_address"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/address"
        android:inputType="textPostalAddress"
        android:hint="@string/textview_enter_address"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/birth_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enter_address"
        android:layout_marginTop="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/textview_birth_month_year_mm_yyyy"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/enter_birth_month"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/birth_month"
        android:hint="@string/textview_enter_birth_month"
        android:inputType="date"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enter_birth_month"
        android:layout_marginTop="11dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/textview_teacher_name"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/enter_teacher_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/birth_month"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teacher_name"
        android:hint="@string/textview_enter_teacher_name"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/current_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enter_teacher_name"
        android:layout_toEndOf="@+id/enter_birth_month"
        android:text="@string/textview_current_grade"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/enter_current_grade"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/current_grade"
        android:layout_below="@+id/current_grade"
        android:hint="@string/textview_enter_grade"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/emergency_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enter_teacher_name"
        android:layout_marginTop="11dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/textview_emergency_contact"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/emergency_contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/enter_current_grade"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emergency_contact"
        android:ems="10"
        android:hint="@string/textview_enter_emrgency_info"
        android:inputType="textMultiLine"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"/>
</RelativeLayout>